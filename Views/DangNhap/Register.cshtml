</head>
<body>
    @using (Html.BeginForm("Register", "DangNhap", FormMethod.Post, new { id = "form-dangki" }))
    {

        @Html.AntiForgeryToken()
        <div class="formdangnhap-dn">
            <h4>ĐĂNG KÍ TÀI KHOẢN</h4>
            <hr />
            @ViewBag.Error
            <div class="form-group flex-kiet">
                <p>ID tài khoản: </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" }, @id = "TK" })
                    <span id="errorTK"></span>
                </div>
            </div>
            <div class="form-group flex-kiet">
                <p>Tên người dùng: </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TEN, new { htmlAttributes = new { @class = "form-control" }, @id = "TND"  })
                    <span id="errorTND"></span>
                </div>
            </div>
            <div class="form-group flex-kiet">
                <p>Mật khẩu: </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PASS, new { htmlAttributes = new { @class = "form-control" }, @id = "MK" } )
                    <span id="errorMK"></span>
                </div>
            </div>
            <div class="form-group flex-kiet">
                <p>Giới tính: </p>
                @Html.RadioButtonFor(model => model.GIOITINH, "Nam", new { @id = "radNam", @checked = true })<p>Nam</p>
                @Html.RadioButtonFor(model => model.GIOITINH, "Nữ", new { @id = "radNu"})<p>Nữ</p>
            </div>
            <div class="form-group flex-kiet">
                <p>Địa chỉ: </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" }, @id = "DC" })
                    <span id="errorDC"></span>
                </div>
            </div>

            <div class="form-group flex-kiet">
                <p>Số điện thoại: </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" }, @id = "SDT" })
                    <span id="errorSDT"></span>
                </div>
            </div>

            <div class="form-group flex-kiet">
                <p>Phân quyền: </p>
                <div class="col-md-10">
                    @{
                        @Html.RadioButtonFor(model => model.PQ, "KHACH", new { @id = "radKhach", @checked = true })<p>Khách</p>
                    }
                </div>
            </div>
            
            <div class="form-group flex-kiet">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" @*onclick="getinfo(); return false;"*@ name ="submit" value="Đăng kí" class="form-submit" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại đăng nhập", "Index")
    </div>
</body>
</html>





