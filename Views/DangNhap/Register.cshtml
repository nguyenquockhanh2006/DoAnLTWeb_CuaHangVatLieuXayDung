@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Đăng kí</title>
    <link href="~/Content/StyleSheetDangKi.css" rel="stylesheet" />
