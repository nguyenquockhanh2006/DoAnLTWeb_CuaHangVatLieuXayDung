        </script>*@

    <div style="width:30%; float:left">
        <div>
            <video autoplay loop muted playsinline style="width:90%">
                <source src="~/Content/Image/hkt%20(1).mp4" type="video/mp4" />
            </video>
        </div>
        <div id="slideshow">
            <div class="slide-wrapper">
                <div class="slide" id="slide-1"><img src="~/Content/Image/sale.png" style="width: 100%;height:700px" /></div>
                <div class="slide" id="slide-2"><img src="~/Content/Image/sale1.jpg" style="width: 100%;height:700px" /></div>
                <div class="slide" id="slide-3"><img src="~/Content/Image/sale5.png" style="width: 100%;height:700px" /></div>
            </div>
                <a href="#slide-1">1</a>
                <a href="#slide-2">2</a>
                <a href="#slide-3">3</a>
        </div>
    </div>


    <div style="width:70%; float:left">
        @RenderBody()
    </div>



    <hr style="float:left" />
    <div style="background-color:black;float:left;width:100%">
        <footer style="color:antiquewhite">
            <p><strong>&emsp; Thông tin thành viên:</strong></p>
            <p>&emsp; Nguyễn Quốc Khánh   - 1911061792</p>
            <p>&emsp; Hoàng Thị Yến Trinh - 1911066422</p>
            <p>&emsp; Lưu Văn Hòa         - 1911065218</p>
