<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/StyleSheetMenu.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="thongtinlienhe" style="width: 100%; height: 430px;float:left ; background-image: url('../../Content/Image/Title.jpg');background-size:1360px;background-repeat:no-repeat">
    </div>

    <div id="wrapper" style="width:100% ; float:left">
        <div id="header">
            <nav class="container">
                <ul id="Main-Menu">
                    <li><a href="~/TrangChu/Index">Trang Chủ</a></li>
                    <li>
                        <a href="#####">Sản phẩm</a>
                        <ul class="sub-menu">
                            <li>@Html.ActionLink("Xi măng", "LoadSanPham", "SanPham", new { Loai = "XMANG" }, null)</li>
                            <li>@Html.ActionLink("Cát xây dựng", "LoadSanPham", "SanPham", new { Loai = "CATXD" }, null)</li>
                            <li>@Html.ActionLink("Đá xây dựng", "LoadSanPham", "SanPham", new { Loai = "DAXD" }, null)</li>
                            <li>@Html.ActionLink("Tôn", "LoadSanPham", "SanPham", new { Loai = "TON" }, null)</li>
                            <li>@Html.ActionLink("Thép", "LoadSanPham", "SanPham", new { Loai = "THEP" }, null)</li>
                            <li>@Html.ActionLink("Sơn xây dựng", "LoadSanPham", "SanPham", new { Loai = "SONXD" }, null)</li>
                            <li>@Html.ActionLink("Gạch xây dựng", "LoadSanPham", "SanPham", new { Loai = "XMANG" }, null)</li>
                        </ul>
                    </li>
                    @{
                        if (Session["ID"] == null)
                        {
                            <li><a href="~/DangNhap/Login">Đăng nhập</a></li>
                            <li><a href="~/DangNhap/Register">Đăng kí</a></li>
                        }
                        else
                        {
                            string s = Session["FullName"].ToString();
                            if (Session["PHANQUYEN"].ToString() == "KHACH")
                            {
                                <li><a href="~/GioHang/Index">Giỏ hàng</a></li>
                                <li><a href="#####">Đơn hàng</a></li>
                                <li><a href="#####">Tư vấn</a></li>
                                
                                <li>
                                    <a href="######">Xin chào  @s</a>
                                    <ul class="sub-menu">
                                        <li><a href="######">Xem thông tin</a></li>
                                        <li><a href="######">Đổi mật khẩu</a></li>
                                        <li><a href="~/DangNhap/Logout">Đăng xuất</a></li>
                                    </ul>
                                </li>
                            }
                            if (Session["PHANQUYEN"].ToString() == "AD")
                            {
                                <li><a href="#####">Đăng bài</a></li>
                                <li><a href="#####">Đơn chờ duyệt</a></li>
                                <li>
                                    <a href="######">Xin chào  @s</a>
                                    <ul class="sub-menu">
                                        <li><a href="######">Xem thông tin</a></li>
                                        <li><a href="######">Đổi mật khẩu</a></li>
                                        <li><a href="~/DangNhap/Logout">Đăng xuất</a></li>
                                    </ul>
                                </li>
                            }

                        }
                    }

                </ul>
            </nav>
        </div>
    </div>

